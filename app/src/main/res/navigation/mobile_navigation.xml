<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_latest">

    <fragment
        android:id="@+id/navigation_latest"
        android:name="com.themoviedatabase.android.ui.home.movies.LatestMoviesView"
        android:label="@string/title_latest"
        tools:layout="@layout/fragment_movies" />

    <fragment
        android:id="@+id/navigation_popular"
        android:name="com.themoviedatabase.android.ui.home.movies.PopularMoviesView"
        android:label="@string/title_popular"
        tools:layout="@layout/fragment_movies" />

    <fragment
        android:id="@+id/navigation_upcoming"
        android:name="com.themoviedatabase.android.ui.home.movies.UpComingMoviesView"
        android:label="@string/title_upcoming"
        tools:layout="@layout/fragment_movies" />


</navigation>