<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_latest">

    <fragment
        android:id="@+id/navigation_latest"
        android:name="com.themoviedatabase.android.ui.collections.LatestCollectionView"
        android:label="@string/title_latest"
        tools:layout="@layout/fragment_collections" >
        <action
            android:id="@+id/action_navigation_latest_to_navigation_detail"
            app:destination="@id/navigation_detail" />

    </fragment>

    <fragment
        android:id="@+id/navigation_popular"
        android:name="com.themoviedatabase.android.ui.collections.PopularCollectionView"
        android:label="@string/title_popular"
        tools:layout="@layout/fragment_collections" >
        <action
            android:id="@+id/action_navigation_latest_to_navigation_detail"
            app:destination="@id/navigation_detail" />
    </fragment>
    <fragment
        android:id="@+id/navigation_upcoming"
        android:name="com.themoviedatabase.android.ui.collections.UpComingCollectionView"
        android:label="@string/title_upcoming"
        tools:layout="@layout/fragment_collections">
        <action
            android:id="@+id/action_navigation_latest_to_navigation_detail"
            app:destination="@id/navigation_detail" />
    </fragment>
    <activity
        android:id="@+id/navigation_detail"
        android:name="com.themoviedatabase.android.ui.movies.detail.DetailMovieScreen"
        tools:layout="@layout/screen_detail" >
        <argument
            android:name="id"
            app:argType="integer" />
    </activity>

</navigation>