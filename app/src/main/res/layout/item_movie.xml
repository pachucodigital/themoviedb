<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"

    android:foreground="?selectableItemBackground"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/item_movie_poster"
        android:layout_width="72dp"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        fresco:placeholderImage="@drawable/ic_logo_big"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </com.facebook.drawee.view.SimpleDraweeView>

    <TextView
        style="@style/ItemCollectionSubtitle"
        tools:text="Lorem Ipsum"
        android:id="@+id/item_movie_title"
        android:layout_width="0dp"

        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/item_movie_poster"
        app:layout_constraintTop_toTopOf="@+id/item_movie_poster">

    </TextView>

    <TextView
        android:id="@+id/item_movie_subtile"
        style="@style/ItemCollectionDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:maxLines="3"
        android:ellipsize="end"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/item_movie_poster"
        app:layout_constraintTop_toBottomOf="@+id/item_movie_title"
        tools:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s,">
    </TextView>

    <TextView

        android:id="@+id/item_movie_extras"
        style="@style/ItemCollectionLabels"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:ellipsize="end"
        android:maxLines="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/item_movie_poster"
        app:layout_constraintTop_toBottomOf="@+id/item_movie_subtile"
        tools:text="Lorem Ipsum is simply dummy "></TextView>

</androidx.constraintlayout.widget.ConstraintLayout>