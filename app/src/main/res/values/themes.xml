<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TheMovieDatabaseApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/tangaroa_200</item>
        <item name="colorPrimaryVariant">@color/tangaroa_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="textInputStyle">@style/TextInput</item>
    </style>



    <style name="MDBTitle" parent="Theme.TheMovieDatabaseApp">
        <item name="fontFamily">@font/helvetica_neue_medium</item>
        <item name="android:textSize">@dimen/title_size</item>
    </style>

    <style name="MDBSubtitle" parent="Theme.TheMovieDatabaseApp">
        <item name="fontFamily">@font/helvetica_neue_thin</item>
        <item name="android:textSize">@dimen/subtitle_size</item>
    </style>

    <style name="MDBDescription" parent="Theme.TheMovieDatabaseApp">
        <item name="fontFamily">@font/helvetica_neue_light</item>
        <item name="android:textSize">@dimen/description_size</item>
    </style>

    <style name="MDBLabel" parent="Theme.TheMovieDatabaseApp">
        <item name="fontFamily">@font/helvetica_neue_light</item>
        <item name="android:textSize">@dimen/label_size</item>
    </style>

    <style name="WelcomeText" parent="MDBTitle">
        <item name="android:textSize">@dimen/welcome_text_size</item>
        <item name="android:textColor">@color/teal_200</item>
    </style>


    <style name="MDBButtonBlue" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/cerulian_500</item>
        <item name="rippleColor">@color/tangaroa_700</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/helvetica_neue_medium</item>
    </style>

    <style name="MDBBottomNavigation">
        <item name="itemIconTint">@color/selector_tangaro</item>
        <item name="itemBackground">@drawable/bg_tab_tangaro</item>
        <item name="itemTextColor">@color/selector_tangaro</item>
    </style>

    <style name="MDBToolbar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:background">@color/tangaroa_200</item>
        <item name="titleTextColor">@color/white</item>
    </style>

    <style name="ItemCollectionSubtitle" parent="MDBSubtitle">
        <item name="android:textColor">@color/tangaroa_700</item>
    </style>
    <style name="ItemCollectionDescription" parent="MDBDescription">
        <item name="android:textColor">@color/tangaroa_200</item>
    </style>
    <style name="ItemCollectionLabels" parent="MDBLabel">
        <item name="android:textColor">@color/tangaroa_200</item>
    </style>
</resources>